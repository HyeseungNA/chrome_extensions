{
  "manifest_version": 3,
  "name": "Timer for Baekjoon",
  "version": "1.0",
  "description": "코딩 테스트를 준비하는 사람들을 위한 백준 타이머",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  },
  "host_permissions": ["https://*/*"],
  "permissions": ["activeTab", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.acmicpc.net/"],
      "js": ["content-script.js"],
      "runAt": "document_end"
    }
  ]
}
